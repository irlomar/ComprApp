<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/idFragmentInventario"
    tools:context=".Inventario">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Space
            android:layout_width="match_parent"
            android:layout_height="72dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Space
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/buttonNevera"
                android:layout_width="125dp"
                android:layout_height="123dp"
                android:layout_weight="1"
                android:text="nevera" />

            <Space
                android:layout_width="21dp"
                android:layout_height="123dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/buttonCongelador"
                android:layout_width="125dp"
                android:layout_height="123dp"
                android:layout_weight="1"
                android:text="congelador" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Space
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/buttonDespensa"
                android:layout_width="125dp"
                android:layout_height="123dp"
                android:layout_weight="1"
                android:text="despensa" />

            <Space
                android:layout_width="21dp"
                android:layout_height="123dp"
                android:layout_weight="1" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_margin="@dimen/fab_margin"
                android:backgroundTint="#ACF76F"
                app:srcCompat="@drawable/ic_baseline_control_point_24px" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Space
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/buttonCaducidades"
                android:layout_width="363dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="caducidades" />
        </LinearLayout>

    </LinearLayout>
</FrameLayout>