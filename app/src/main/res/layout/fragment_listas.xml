<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Listas">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Space
            android:layout_width="match_parent"
            android:layout_height="72dp" />

        <Button
            android:id="@+id/buttonListaHabitual"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:text="Habitual" />

        <Button
            android:id="@+id/buttonListaCustomizada"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:text="Customizada" />

        <Button
            android:id="@+id/buttonListaCompartida"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:text="Compartidas" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/buttonNuevaLista"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="@dimen/fab_margin"
            android:backgroundTint="#ACF76F"
            app:srcCompat="@drawable/ic_baseline_control_point_24px" />

    </LinearLayout>
</FrameLayout>